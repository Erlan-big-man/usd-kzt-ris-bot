import os
import telebot
import requests
from flask import Flask
from threading import Thread

# 1. Настройка сервера для Render
app = Flask('')

@app.route('/')
def home():
    return "Бот запущен и работает!"

def run():
    app.run(host='0.0.0.0', port=10000)

def keep_alive():
    t = Thread(target=run)
    t.start()

# 2. Настройка самого бота
TOKEN = os.getenv("BOT_TOKEN")
bot = telebot.TeleBot(TOKEN)

@bot.message_handler(commands=['start'])
def start(message):
    url = "https://api.exchangerate-api.com/v4/latest/USD"
    try:
        response = requests.get(url).json()
        rate = response['rates']['KZT']
        bot.send_message(message.chat.id, f"Курс: {rate} KZT\n✅ Аналитика запущена!")
    except:
        bot.send_message(message.chat.id, "Ошибка получения курса")

# 3. Запуск всего вместе
if name == "__main__":
    keep_alive() # Запускаем веб-сервер на порту 10000
    print("Веб-сервер запущен...")
    bot.infinity_polling(timeout=10, long_polling_timeout=5)
