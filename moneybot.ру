import os
import telebot
import requests
from flask import Flask
from threading import Thread

# 1. СЕРВЕР ДЛЯ RENDER (порт 10000)
app = Flask('')
@app.route('/')
def home():
    return "Бот работает!"

def run():
    app.run(host='0.0.0.0', port=10000)

def keep_alive():
    t = Thread(target=run)
    t.start()

# 2. ЛОГИКА БОТА
TOKEN = os.getenv("BOT_TOKEN")
bot = telebot.TeleBot(TOKEN)

@bot.message_handler(commands=['start'])
def start(message):
    url = "https://api.exchangerate-api.com/v4/latest/USD"
    try:
        data = requests.get(url).json()
        rate = data['rates']['KZT']
        bot.reply_to(message, f"Курс: {rate} KZT\n✅ Аналитика запущена!")
    except:
        bot.reply_to(message, "Ошибка получения данных")

# 3. ЗАПУСК
if _name_ == "__main__":
    keep_alive()
    print("Веб-сервер запущен. Подключаюсь к Telegram...")
    bot.infinity_polling(timeout=20, long_polling_timeout=10)
