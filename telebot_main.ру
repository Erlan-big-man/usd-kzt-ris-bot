import os
import telebot
import time

TOKEN = os.getenv("BOT_TOKEN")

bot = telebot.TeleBot(TOKEN)

@bot.message_handler(commands=["start"])
def start(message):
    bot.send_message(
        message.chat.id,
        "ü§ñ –ë–æ—Ç –º–æ–Ω–∏—Ç–æ—Ä–∏–Ω–≥–∞ USD/KZT –∑–∞–ø—É—â–µ–Ω.\n–ï–∂–µ–¥–Ω–µ–≤–Ω—ã–µ –æ–±–∑–æ—Ä—ã —Å–∫–æ—Ä–æ –±—É–¥—É—Ç üìä"
    )

while True:
    try:
        bot.polling(non_stop=True)
    except:
        time.sleep(5)
